@model MainProjectFull.Areas.Admin.ViewModel.UserVM

<!DOCTYPE html>
<html lang="en">

@await Html.PartialAsync("_Header")

<body id="page-top">

    @await Html.PartialAsync("_Navbar")

    <div id="content-wrapper">
        <div class="container-fluid">
            <!-- Icon Cards-->
            <div class="row">
                <!-- DataTables Example -->
                <div class="card w-100">
                    <div class="card-header">
                        <i class="fas fa-users"></i>
                        İstifadəçi cədvəli
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Ad Soyad</th>
                                        <th>İxtisası</th>
                                        <th>Email adresi</th>
                                        <th>Qeydiyyat tarixi</th>
                                        <th>Tənzimləmə</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th></th>
                                        <th>Ad Soyad</th>
                                        <th>İxtisası</th>
                                        <th>Email adresi</th>
                                        <th>Tənzimləmə</th>
                                    </tr>
                                </tfoot>
                                <tbody>

                                    @foreach (var item in Model.Users)
                                    {
                                        var profile = Model.Profiles.FirstOrDefault(p => p.UsersId == item.Id);

                                    <tr>
                                        <td>
                                            <a href="~/Content/Images/Users/@profile.Photo" data-lightbox="example-set" title="@item.Name @item.Surname">
                                                <img src="~/Content/Images/Users/@profile.Photo" style="height:60px;width:60px;object-fit:cover" />
                                            </a>
                                        </td>
                                        <td>@item.Name @item.Surname </td>
                                        <td>@item.Profession </td>
                                        <td>@item.Email </td>
                                        <td>@item.RegisterDate </td>
                                        <td><a href="@Url.Action("SingleUser", "Users", new { id = item.Id })" class="btn btn-warning"><i class="fas fa-user-cog"></i> Redaktə et</a> </td>
                                    </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
            <!-- /.container-fluid -->
            <!-- Sticky Footer -->
            <footer class="sticky-footer">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright © Your Website 2019</span>
                    </div>
                </div>
            </footer>

        </div>
    </div>

</body>
@await Html.PartialAsync("_Footer")

</html>
