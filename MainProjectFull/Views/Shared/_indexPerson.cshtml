@inject SignInManager<Users> SignInManager
@model MainProjectFull.ViewModel.PersonSearchVM

<article class="render-partial cv person">
    <section>
        <div class="container">
            <aside class="left-sort-menu search-menu" data-url="@Url.Action("GetPerson","Search")">
                <ul class="ul-menu-vertical">
                    <div class="aside-header"> Filterləmə </div>
                    <li class="active">
                        <a href="#" data-search="all"> <i class="fas fa-eye"></i> Hamısı </a>
                    </li>
                    <li>
                        <a href="#" data-search="topview"> <i class="fas fa-eye"></i> Ən çox baxılanlar </a>
                    </li>
                    <li>
                        <a href="#" data-search="topPortfolio"> <i class="fas fa-images"></i> Portfoliosu çox olanlar </a>
                    </li>
                    <li>
                        <a href="#" data-search="code"> <i class="fas fa-code"></i> Yalnız proqramçılar </a>
                    </li>
                    <li>
                        <a href="#" data-search="design"> <i class="fas fa-palette"></i> Yalnız dizaynerlər </a>
                    </li>
                </ul>
            </aside>

            <div class="container">
                <!-- Sort tags line -->

                <span class="text-secondary section-header pt-4 ml-4">@Model.Profiles.Count nəfər tapildi</span> <br>

                <div class="row pl-4">

                    @foreach (var item in Model.Profiles)
                    {
                        var user = Model.Users.FirstOrDefault(u => u.Id == item.UsersId);

                        <div class="col-lg-3 col-md-6">
                            <div class="portfolio-item">
                                <div class="portfolio-img">
                                    <a href="~/Content/Images/Users/@item.Photo" data-lightbox="example-set" title="@user.Name @user.Surname">
                                        <img src="~/Content/Images/Users/@item.Photo" draggable="false" alt="">
                                    </a>
                                </div>
                                <div class="portfolio-item-nav">
                                    <div class="portfolio-user-info">
                                        <img src="~/Content/Images/Users/@item.Photo" class="img-round" alt="">
                                        <div>
                                            <h5><a href="@Url.Action("About","Profile",new {id = item.id })"> @user.Name @user.Surname </a></h5>
                                            <h6> @user.Profession </h6>
                                        </div>
                                    </div>
                                    <div class="portfolio-item-info">
                                        <i class="fas fa-eye"></i> <span>@item.View</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </section>
</article>